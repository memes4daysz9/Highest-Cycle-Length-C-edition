# Compiler and flags
CXX := g++
CXXFLAGS := -Wall -Wextra -Iinclude -g -pg
LDFLAGS := -pg

# Directories
SRC_DIR := src
INC_DIR := include
OBJ_DIR := obj
BIN := main

# Files
SRCS := $(wildcard $(SRC_DIR)/*.cpp)
OBJS := $(SRCS:$(SRC_DIR)/%.cpp=$(OBJ_DIR)/%.o)

# Default rule
all: $(BIN)

# Link the final binary (now uses LDFLAGS!)
$(BIN): $(OBJS)
	$(CXX) $(LDFLAGS) $(OBJS) -o $@

# Compile source files to object files
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp | $(OBJ_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Create obj directory if needed
$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)

# Run the binary and profile
profile: $(BIN)
	./$(BIN)
	gprof $(BIN) gmon.out > analysis.txt
	cat analysis.txt | less

# Clean build files and profiling output
clean:
	rm -rf $(OBJ_DIR) $(BIN) gmon.out analysis.txt

.PHONY: all clean profile
